# Install homebrew.
ruby -e "$(curl -fsSL https://raw.github.com/Homebrew/homebrew/go/install)"

# Makes sure we're on the latest version.
brew update
brew upgrade

# Core tools.
brew install zsh
brew install git
brew install coreutils
brew install heroku-toolbelt

# Development & general tools.
brew install htop
brew install wget
brew install pstree
brew install tree
brew install gcal
brew install cloc
brew install ack

# Databases.
brew install sqlite3
brew install postgresql

# Languages.
brew install python3
brew install python
brew install clisp
brew install swi-prolog

# Frameworks.
brew install node

# Other programs.
brew install macvim
brew install graphviz

# Remove outdated versions from the cellar.
brew cleanup
brew linkapps
